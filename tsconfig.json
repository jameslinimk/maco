{
    "compilerOptions": {
        "target": "ESNext",
        "watch": true,
        "lib": [
            "ESNext",
        ],
        "module": "ESNext",
        "moduleResolution": "node",
        "sourceMap": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "strict": true
    },
    "exclude": [
        "node_modules",
        "./node_modules",
        "./node_modules/*",
    ]
}
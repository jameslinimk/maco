{
    "compilerOptions": {
        "target": "ESNext",
        "watch": true,
        "lib": [
            "ESNext"
        ],
        "module": "ESNext",
        "moduleResolution": "node",
        "sourceMap": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "strict": true,
        "noImplicitAny": false
    },
    "exclude": [
        "node_modules",
        "./node_modules",
        "./node_modules/*"
    ]
}